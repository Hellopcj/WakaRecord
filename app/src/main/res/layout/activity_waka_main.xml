<?xml version="1.0" encoding="utf-8"?><FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".avtivity.WakaMainActivity">    <android.support.v4.view.ViewPager        android:id="@+id/vp_content"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="50dp"></android.support.v4.view.ViewPager>    <RadioGroup        android:id="@+id/main_bottom_bar"        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:layout_gravity="bottom"        android:background="@color/color_eff1fe"        android:orientation="horizontal"        android:paddingTop="5dp">        <RadioButton            android:id="@+id/rb_home"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:button="@null"            android:checked="true"            android:clickable="true"            android:drawablePadding="1dp"            android:drawableTop="@drawable/btn_home_selector"            android:gravity="center"            android:text="@string/tv_home"            android:onClick="onClick"            android:textColor="@color/color_main_text"            android:textSize="11sp"            android:typeface="sans" />        <RadioButton            android:id="@+id/rb_vedio"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:button="@null"            android:clickable="true"            android:drawablePadding="1dp"            android:drawableTop="@drawable/btn_vedio_selector"            android:gravity="center"            android:text="@string/tv_vedio"            android:onClick="onClick"            android:textColor="@color/color_main_text_normal"            android:textSize="11sp"            android:typeface="sans" />        <RadioButton            android:id="@+id/rb_recommend"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:button="@null"            android:clickable="true"            android:onClick="onClick"            android:drawablePadding="1dp"            android:drawableTop="@drawable/btn_recomend_selector"            android:gravity="center"            android:text="@string/tv_recommend"            android:textColor="@color/color_main_text_normal"            android:textSize="11sp"            android:typeface="sans" />        <RadioButton            android:id="@+id/rb_fun"            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:button="@null"            android:clickable="true"            android:onClick="onClick"            android:drawablePadding="1dp"            android:drawableTop="@drawable/iv_fun"            android:gravity="center"            android:text="@string/tv_fun"            android:textColor="@color/color_main_text_normal"            android:textSize="11sp"            android:typeface="sans" />    </RadioGroup></FrameLayout>