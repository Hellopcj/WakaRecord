<?xml version="1.0" encoding="utf-8"?><merge xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".avtivity.WakaMainActivity">    <android.support.v4.view.ViewPager        android:id="@+id/vp_content"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="50dp" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:layout_alignParentLeft="true"        android:layout_alignParentStart="true"        android:orientation="vertical"        android:background="@color/white"        android:layout_gravity="bottom">        <View            android:layout_width="match_parent"            android:layout_height="0.2dp"            android:background="@color/color_E5E5E5" />        <RadioGroup            android:id="@+id/main_bottom_bar"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:orientation="horizontal"            android:paddingTop="5dp">            <RadioButton                android:id="@+id/rb_home"                android:drawableTop="@drawable/btn_home_selector"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:button="@null"                android:checked="true"                android:clickable="true"                android:drawablePadding="1dp"                android:gravity="center"                android:onClick="onClick"                android:text="@string/tv_home"                android:textColor="@color/color_main_text"                android:textSize="12sp"                android:typeface="sans" />            <RadioButton                android:id="@+id/rb_vedio"                android:drawableTop="@drawable/btn_vedio_selector"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:button="@null"                android:clickable="true"                android:drawablePadding="1dp"                android:gravity="center"                android:onClick="onClick"                android:textSize="12sp"                android:textColor="@color/color_main_text_normal"                android:typeface="sans"                android:text="@string/tv_vedio" />            <RadioButton                android:id="@+id/rb_recommend"                android:drawableTop="@drawable/btn_recomend_selector"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:button="@null"                android:clickable="true"                android:drawablePadding="1dp"                android:gravity="center"                android:onClick="onClick"                android:text="@string/tv_recommend"                android:textColor="@color/color_main_text_normal"                android:textSize="12sp"                android:typeface="sans" />            <RadioButton                android:id="@+id/rb_fun"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_weight="1"                android:button="@null"                android:clickable="true"                android:drawablePadding="1dp"                android:drawableTop="@drawable/iv_fun"                android:gravity="center"                android:onClick="onClick"                android:text="@string/tv_fun"                android:textColor="@color/color_main_text_normal"                android:textSize="12sp"                android:typeface="sans" />        </RadioGroup>    </LinearLayout></merge>