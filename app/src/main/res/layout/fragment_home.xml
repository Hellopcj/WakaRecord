<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:background="@drawable/back"    android:layout_height="match_parent">    <LinearLayout        android:orientation="vertical"        android:gravity="center"        android:layout_width="match_parent"        android:layout_height="match_parent">        <ImageButton            android:onClick="onClick"            android:background="@drawable/icon"            android:id="@+id/ib_start_landscape"            android:layout_width="60dp"            android:layout_height="60dp" />        <ImageButton            android:onClick="onClick"            android:layout_marginTop="30dp"            android:background="@drawable/icon"            android:id="@+id/ib_start_portrait"            android:layout_width="60dp"            android:layout_height="60dp" />    </LinearLayout><LinearLayout    android:paddingBottom="20dp"    android:layout_alignParentBottom="true"    android:orientation="horizontal"    android:gravity="center"    android:layout_width="match_parent"    android:layout_height="wrap_content">    <Switch        android:id="@+id/sw_audio"        android:gravity="center"        android:paddingLeft="20dp"        android:onClick="onClick"        android:thumb="@drawable/thumb"        android:track="@drawable/track"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/tv_audio" />    <Switch        android:id="@+id/sw_anchor"        android:gravity="center"        android:onClick="onClick"        android:paddingLeft="20dp"        android:paddingRight="20dp"        android:thumb="@drawable/thumb"        android:track="@drawable/track"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="@string/tv_anchor" /></LinearLayout>    <!--<android.support.design.widget.FloatingActionButton-->        <!--android:id="@+id/floatingActionButton"-->        <!--android:layout_width="wrap_content"-->        <!--android:layout_height="wrap_content"-->        <!--android:layout_alignParentBottom="true"-->        <!--android:layout_marginBottom="115dp"-->        <!--android:clickable="true"-->        <!--app:srcCompat="@android:color/holo_purple" />--></RelativeLayout>